  "dependencies": {
    "body-parser": "^1.18.3",
    "concurrently": "^4.1.0",
    "create-react-app": "^2.1.5",
    "express": "^4.16.4",
    "g": "^2.0.1",
    "mongoose": "^5.4.11",
    "nodemon": "^1.18.10"
  }
}
